<div class="row">
  <div class="col-xs-12 col-md-6 col-md-offset-3 group content">
    <h2>All Shows</h2>
    <table class="custom-table">
      <thead>
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Setting</th>
        </tr>
      </thead>
      <tbody id="all_shows">
        <%= render @shows %>
      </tbody>
    </table>
    <%= link_to "<i class=\"fa fa-lg fa-plus\"></i>".html_safe, new_admin_show_path, id: "btn_new_show", class: "btn-add" %>
  </div>
</div>
