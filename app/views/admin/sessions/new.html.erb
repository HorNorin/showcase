<div class="row">
  <div class="col-xs-8 col-xs-push-2 col-sm-6 col-sm-push-3 col-md-4 col-md-push-4 group content">
    <h2>Admin</h2>

    <%= form_for resource, url: session_path(resource_name), html: {class: "form"} do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: "Email", autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign In", class: "btn btn-extend btn-danger" %>
      </div>
    <% end %>
</div>
